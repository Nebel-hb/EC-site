<% provide(:title, "カート") %>
<h2>ショッピングカート</h2>

          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        
        <% @cart_items.each do |cart_item| %>
  			  <tr id="cart-<%= cart_item.id %>">
           <td class="text-left">
  <%= attachment_image_tag( cart_item.product, :image %>
  <%= cart_item.shop.item %>
</td>
<td class="text-right">
  ¥<%= price(cart_item.shop.price).to_s(:delimited) %>
</td>
<td>
  <%= form_for(cart_item, url: user_cart_item_path(cart_item), method: :patch , remote: true)do |f| %>
    <%= f.number_field :quantity, class: "quantity", size: 10, min: 1, id: "quantity_cart" %>
    <%= f.submit "変更" %>
  <% end %>
</td>
<td class="text-right" id='sub_price-<%= cart_item.id %>'>
  ¥<%= sub_price(cart_item).to_s(:delimited) %>
</td>
<td>
  <!--%= link_to " 削除する", customers_cart_item_path(cart_item), method: :delete, remote: true, data: {confirm: "#{cart_item.product.name}を削除してよろしいですか？"}, class: "glyphicon glyphicon-trash btn btn-danger" %>-->
</td>
          </tr>
        <% end %>
      
         
            <td>合計金額</td>
            <td>
              ¥<%= total_price(@cart_items).to_s(:delimited) %>
            </td>
