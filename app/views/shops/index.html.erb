<div class="container">
  <div class="row my-4">
    <h1>商品一覧</h1><h4 class="pt-3">（全<%= Shop.ids.count %>件）</h2>
  </div>  
  <div class="row">
       <% @shops.each do |shop| %>
   <div class="col-3 mt-3">
       <%= link_to shop_path(shop) do %>
       <%= attachment_image_tag shop, :image, :fill,200,150,format: 'jpeg'%><br>
       <% end %>
      <%= shop.item %><br>
       <p>￥<%= shop.price %></p><br>
    </div>
       <% end %>
   </div> 
  
 </div>
